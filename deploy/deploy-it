#!/usr/bin/env bash

#############################################################################
#                                                                           #
#     DO NOT EDIT THIS FILE BY HAND -- YOUR CHANGES WILL BE OVERWRITTEN     #
#                                                                           #
#############################################################################

# script exit when a command fails
set -o errexit
# catch a command error in pipe execution
set -o pipefail
# exit when try to use undeclared variables
# set -o nounset
# print and expand each command to stdout before executing it
set -o xtrace

if [ $# -eq 0 ]; then
  echo "Missing required argument: environment"
  exit 1
fi

export ENV=$1
export VERSION="${DRONE_TAG:-$DRONE_COMMIT_SHA}"
export AWS_DEFAULT_REGION="eu-west-1"

function wait_for_artifact() {
  echo -n "Waiting for artifact"
  while true; do
    if ! aws s3 ls s3://prima-artifacts-encrypted/microservices/amqpx/"${VERSION}"-"${ENV}".tar.gz; then
      echo -ne "."
      sleep 10
    else
      echo "Artifact ready!"
      break
    fi
  done
}

if [ "$2" = "--wait-for-artifact" ]; then
  wait_for_artifact
fi

if [ "${ENV}" = "production" ]; then
  set +x
  mix hex.config api_key "$HEX_AUTH_KEY"
  mix hex.user whoami
  mix hex.publish --yes
else
  echo "${ENV} non supportato!"
  exit 1
fi
